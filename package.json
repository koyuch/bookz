{
  "name": "bookz",
  "version": "1.0.0",
  "description": "Book collection REST api",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json",
    "build": "tsc",
    "build:watch": "tsc -w",
    "prestart": "npm run build",
    "start": "node .",
    "clean": "rm -r dist",
    "start:dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec npm run start:dev",
    "test": "NODE_ENV=test mocha --exit -r ts-node/register src/tests/**/*.test.ts",
    "test:js": "mocha dist/tests/**/*.test.js",
    "db:recreate": "export NODE_ENV=dev && (npx sequelize db:drop; npx sequelize db:create && npx sequelize db:migrate && npx sequelize db:seed:all)"
  },
  "author": "koyuch",
  "license": "GPL-3.0",
  "repository": "github:koyuch/bookz",
  "dependencies": {
    "ajv": "^6.10.2",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-bearer-token": "^2.4.0",
    "mysql2": "^1.6.5",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.10.3",
    "sequelize-cli": "^5.5.0",
    "sequelize-typescript": "^1.0.0-beta.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.8",
    "@types/validator": "^10.11.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv-cli": "^2.0.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  }
}
